    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const orgLogos = document.querySelector('.org-logos');
            let isDown = false;
            let startX;
            let scrollLeft;

            orgLogos.addEventListener('mousedown', (e) => {
                isDown = true;
                orgLogos.classList.add('active');
                startX = e.pageX - orgLogos.offsetLeft;
                scrollLeft = orgLogos.scrollLeft;
            });

            orgLogos.addEventListener('mouseleave', () => {
                isDown = false;
                orgLogos.classList.remove('active');
            });

            orgLogos.addEventListener('mouseup', () => {
                isDown = false;
                orgLogos.classList.remove('active');
            });

            orgLogos.addEventListener('mousemove', (e) => {
                if (!isDown) return;
                e.preventDefault();
                const x = e.pageX - orgLogos.offsetLeft;
                const walk = (x - startX) * 2; //scroll-fast
                orgLogos.scrollLeft = scrollLeft - walk;
            });
        });
    </script>

